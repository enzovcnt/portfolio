{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <section id="register" class="bg-yellow-50 px-6 py-20">
        <h2 class="text-center text-3xl font-bold mb-10 text-maroon">Créer un compte</h2>

        <div class="max-w-md mx-auto bg-white p-8 rounded-lg shadow-lg">
            {% for message in app.flashes('success') %}
                <div class="bg-green-200 text-green-800 p-4 rounded mb-4 text-center">{{ message }}</div>
            {% endfor %}

            {{ form_start(registrationForm, { attr: { class: 'space-y-6' } }) }}
            {{ form_errors(registrationForm) }}

            {{ form_row(registrationForm.email, {
                attr: { placeholder: 'Email', class: 'w-full border p-2 rounded' }
            }) }}

            {{ form_row(registrationForm.plainPassword, {
                label: 'Mot de passe',
                attr: { placeholder: 'Mot de passe', class: 'w-full border p-2 rounded' }
            }) }}

            {{ form_row(registrationForm.agreeTerms, {
                label: 'J’accepte les conditions',
                attr: { class: 'mr-2' }
            }) }}

            <button type="submit" class="bg-maroon text-white px-4 py-2 rounded w-full hover:bg-maroon/90">S’inscrire</button>
            {{ form_end(registrationForm) }}
        </div>
    </section>
{% endblock %}
